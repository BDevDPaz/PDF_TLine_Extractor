# .replit
# Especifica un canal estable de Nix para evitar inconsistencias
channel = "stable-23.11"

# El comando explícito que se ejecutará al presionar "Run".
# Esto anula los Workflows y satisface el requisito de la consola.
run = "sh start.sh"

# Se ejecuta una vez al iniciar el Repl para asegurar que el entorno esté listo
onBoot = "echo Entorno listo."

# Configuración del lenguaje para que Replit ofrezca herramientas adecuadas
[languages.python]
pattern = "**/*.py"
[languages.javascript]
pattern = "**/*.{js,jsx}"
